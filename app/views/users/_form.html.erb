<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>Por favor corregí los siguientes errores para continuar:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  
  
  <h2>Nombre</h2>

  <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
        <div class="form-group">
           <%= f.text_field :first_name , class: "form-control input-lg", placeholder: "Primer nombre" %>
        </div>
        </div>


        <div class="col-xs-12 col-sm-6 col-md-6">
        <div class="form-group">
           <%= f.text_field :last_name , class: "form-control input-lg", placeholder: "Apellido" %>
        </div>
        </div>


  </div>

  <h2>Datos de login</h2>

        <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="form-group">
             <%= f.text_field :email , class: "form-control input-lg", placeholder: "Email" %>
        </div>
        </div>
        </div>

  <div class="row">


        <div class="col-xs-12 col-sm-6 col-md-6">
        <div class="form-group">
           <%= f.text_field :password , class: "form-control input-lg", placeholder: "Password" %>
        </div>
        </div>


        <div class="col-xs-12 col-sm-6 col-md-6">
        <div class="form-group">
           <%= f.text_field :password_confirmation , class: "form-control input-lg", placeholder: "Confirme password" %>
        </div>
        </div>


  </div>

  <h2>Dirección</h2>

  <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
        <div class="form-group">
           <%= f.text_field :adress_street , class: "form-control input-lg", placeholder: "Calle" %>
        </div>
        </div>


        <div class="col-xs-12 col-sm-3 col-md-3">
        <div class="form-group">
           <%= f.text_field :adress_number , class: "form-control input-lg", placeholder: "Número" %>
        </div>
        </div>

        <div class="col-xs-12 col-sm-3 col-md-3">
        <div class="form-group">
           <%= f.text_field :adress_apartment , class: "form-control input-lg", placeholder: "Depto." %>
        </div>
        </div>


  </div>

  <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
        <div class="form-group">
           <%= f.text_field :location , class: "form-control input-lg", placeholder: "Localidad" %>
        </div>
        </div>


        <div class="col-xs-12 col-sm-3 col-md-3">
        <div class="form-group">
           <%= f.text_field :state , class: "form-control input-lg", placeholder: "Provincia" %>
        </div>
        </div>

        <div class="col-xs-12 col-sm-3 col-md-3">
        <div class="form-group">
           <%= f.text_field :country , class: "form-control input-lg", placeholder: "País" %>
        </div>
        </div>


  </div>

    <h2> Teléfonos </h2>
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
        <div class="form-group">
           <%= f.text_field :phone1 , class: "form-control input-lg", placeholder: "Teléfono fijo" %>
        </div>
        </div>


        <div class="col-xs-12 col-sm-6 col-md-6">
        <div class="form-group">
           <%= f.text_field :phone2 , class: "form-control input-lg", placeholder: "Celular" %>
        </div>
        </div>

  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-success btn-block btn-lg", value: "Enviar" %>
  </div>



<% end %>

